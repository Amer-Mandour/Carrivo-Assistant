FROM python:3.11-slim

WORKDIR /app

# نسخ ملفات المشروع
COPY frontend/requirements.txt .

# تثبيت Python packages
RUN pip install --no-cache-dir -r requirements.txt

# نسخ باقي الملفات
COPY frontend/ .

# فتح المنفذ
EXPOSE 8501

# تشغيل التطبيق
CMD ["streamlit", "run", "app.py", "--server.port=8501", "--server.address=0.0.0.0"]